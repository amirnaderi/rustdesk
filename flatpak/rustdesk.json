{
  "id": "com.dshldesk.DshlDesk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "dshldesk",
  "icon": "share/icons/hicolor/scalable/apps/dshldesk.svg",
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
    "xdotool.json",
    {
      "name": "dshldesk",
      "buildsystem": "simple",
      "build-commands": [
        "bsdtar -zxvf dshldesk-1.2.3.deb",
        "tar -xvf ./data.tar.xz",
        "cp -r ./usr/*  /app/",
        "mkdir -p /app/bin && ln -s /app/lib/dshldesk/dshldesk /app/bin/dshldesk",
        "mv /app/share/applications/dshldesk.desktop /app/share/applications/com.dshldesk.DshlDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.dshldesk.DshlDesk' /app/share/applications/com.dshldesk.DshlDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.dshldesk.DshlDesk' /app/share/applications/dshldesk-link.desktop",
        "mv /app/share/icons/hicolor/scalable/apps/dshldesk.svg /app/share/icons/hicolor/scalable/apps/com.dshldesk.DshlDesk.svg",
        "for size in 16 24 32 48 64 128 256 512; do\n rsvg-convert -w $size -h $size -f png -o $size.png logo.svg\n install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.dshldesk.DshlDesk.png\n done"
      ],
      "cleanup": ["/include", "/lib/pkgconfig", "/share/gtk-doc"],
      "sources": [
        {
          "type": "file",
          "path": "../dshldesk-1.2.3.deb"
        },
        {
          "type": "file",
          "path": "../res/logo.svg"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=home",
    "--device=dri",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Flatpak"
  ]
}
